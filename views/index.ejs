<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo List</title>
    <link rel="stylesheet" href="/styles/styles.css">
</head>

<body>
    <header>
        <nav>
            <h1>
                <%= date %>
            </h1>
            <div class="links">
                <a href="/" class="active">Today</a>
                <a href="/work">Work</a>
            </div>
        </nav>
    </header>
    <div class="main">
        <form class="add-todo" action="/add-todo" method="post">
            <input type="text" name="todo" class="todo" required
                autocomplete="off" placeholder="Add New">
            <input type="submit" class="submit-btn" value="Create">
        </form>
        <ul class="todo-list">
            <% if (locals.todoItems) { %>
            <% todoItems.forEach((todoItem) => { %>
            <form action="/delete" method="post"
                id="form<%= todoItem._id %>">
                <li><input type="checkbox" name="todoItem"
                        value="<%= todoItem._id %>"
                        class="checkbox"><span>
                        <%= todoItem.name %>
                    </span>
                </li>
            </form>
            <% }) %>
            
            <% } %>
        </ul>
    </div>

    <script src="/script/main.js"></script>
</body>

</html>